	<script>
    	$(document).ready(function(){
			$('#searchArea').css('top', '-120px');
			$('#spyGlass').click(function(){
				$('#searchArea').animate({top: '10px'});
				$(this).css('display', 'none');
				$('#content').animate({top: '60px'});
				$('#top').animate({top: '60px'});
			});
			$('#searchClose').click(function(){
				$('#searchArea').animate({top: '-120px'});
				$('#content').animate({top: '0px'});
				$('#spyGlass').css('display', 'block');
				$('#top').animate({top: '0px'});
			});
		});
    </script>
